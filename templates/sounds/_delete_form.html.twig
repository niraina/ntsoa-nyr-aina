<form method="post" action="{{ path('sounds_delete', {'id': sound.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sound.id) }}">
    <button class="btn">Delete</button>
</form>
